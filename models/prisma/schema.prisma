model employees {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
}

model users {
  id                Int       @id @default(autoincrement())
  username          String    @unique
  first_name        String
  last_name         String
  phone_number      String
  password          String
  address           String?
  NIC               String?
  join_date         DateTime
  DOB               DateTime?
  status            Boolean   @default(true)
  last_login        DateTime?
  refresh_token     String[]  @default([])
  prefered_language String    @default("English")
  verified          Boolean   @default(false)
  ptofile_picture   String    @default("https://th.bing.com/th/id/R.bae2d37c4317140a408aef6671346186?rik=2DNeSZ%2fD0xtseQ&pid=ImgRaw&r=0")
  roles             Json
}
